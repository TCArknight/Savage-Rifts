  <!-- racial layout
  -->
  <layout
    id="framework">
    <portalref portal="fraAbility" />
    <portalref portal="fraComp" />
    <portalref portal="fraChsTbl1" />

    <!-- This script sizes and positions the layout and its child visual elements. -->
    <position><![CDATA[
      ~freeze our table in advancement mode to disable adding new choices
      ~Note: All freezing must be done *before* any positioning is performed.
      if (state.iscreate = 0) then
        portal[fraAbility].freeze = 1
        endif

      portal[fraAbility].visible = 1
      portal[fraComp].visible = 1
      portal[fraChsTbl1].visible = 0
	  if (hero.child[ehExprHelp].field[ehFrameExp].isempty = 0) then
	    portal[fraChsTbl1].visible = 1
		endif
		
      ~position and size the table to span the full layout; it will only use the
      ~vertical space that it actually needs
      perform portal[fraAbility].autoplace
      perform portal[fraComp].autoplace[10]
      perform portal[fraChsTbl1].autoplace[10]
      
      ]]></position>

    </layout>

