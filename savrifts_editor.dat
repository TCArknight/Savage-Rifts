  <!-- Arcane editthing -->
  <editthing
    group="Rifts"
    compset="Arcane2"
    name="Secondary Arcane Backgrnd"
    prefix="arc2"
    description="The arcane background defines the basic details for when a character first gains the background.{br}If a drawback is possessed, it should be bootstrapped by this thing."
    summary="Defines an arcane background that can be selected via a corresponding edge.">
    <inputthing
      name="Number of Powers"
      helptext="Specify the number of arcane powers conferred by this background.">
      <it_field field="arcPowers2"/>
      </inputthing>
    <inputthing
      name="Starting Power Points"
      helptext="Specify the number of starting Power Points conferred by this background.">
      <it_field field="arcPoints2"/>
      </inputthing>
    <inputthing
      name="Arcane Designation"
      helptext="Specify the arcane designation for this background (e.g. Magic, Miracles, etc.).">
      <it_tagpick group="Arcane" tag="?" require="yes" deftag="Magic" dynamic="yes"/>
      </inputthing>
    <!-- RDS SWD This enables the association of Arcane Powers to Arcane Backgrounds from either end of the equation -->
    <inputthing
      name="Invalid Powers"
      helptext="Specify which Powers are NOT available to those with this Arcane Background.">
      <it_taglist group="PowerDeny" tag="?" />
      </inputthing>
    </editthing>  

  <!-- Armor editthing -->
  <editthing
    group="Rifts"
    compset="ArmorRifts"
    name="Armor (Rifts)"
    prefix="arm"
    description="Weapons, vehicles, and simple equipment all have their own tabs for creating objects of those types."
    summary="Defines armor that can be selected on the Armory tab.">
    <inputthing
      name="Armor Type"
      helptext="Specify the Armor Type.">
      <it_tagpick group="ArmorType" tag="?"/>
      </inputthing>
    <inputthing
      name="Defense Rating"
      helptext="Specify the Defense rating of the armor against normal attacks.">
      <it_field field="defDefense"/>
      </inputthing>
    <inputthing
      name="Ballistic Defense Rating"
      helptext="Specify the Defense rating of the armor against ballistic attacks (e.g. bullets).">
      <it_field field="defBullets"/>
      </inputthing>
    <inputthing
      name="Toughness Modifier"
      helptext="Specify the modifier to hero's toughness from the armor.">
      <it_field field="arToughness"/>
      </inputthing>
    <inputthing
      name="Covers Torso?"
      helptext="Specify whether this armor covers the torso.">
      <it_tagcheck group="ArmorLoc" tag="Torso"/>
      </inputthing>
    <inputthing
      name="Covers Head?"
      helptext="Specify whether this armor covers the head.">
      <it_tagcheck group="ArmorLoc" tag="Head"/>
      </inputthing>
    <inputthing
      name="Covers Arms?"
      helptext="Specify whether this armor covers the arms.">
      <it_tagcheck group="ArmorLoc" tag="Arms"/>
      </inputthing>
    <inputthing
      name="Covers Legs?"
      helptext="Specify whether this armor covers the legs.">
      <it_tagcheck group="ArmorLoc" tag="Legs"/>
      </inputthing>
    <inputthing
      name="Stacks on Top of Regular Armor?"
      helptext="Specify whether this armor stacks on top of normal armor protection.">
      <it_tagcheck group="Equipment" tag="StackArmor"/>
      </inputthing>
    <inputthing
      name="Special Traits"
      helptext="Specify any number of special traits that apply to this armor.">
      <it_taglist group="ArmorSpecial" tag="?" />
      </inputthing>
    <inputthing
      name="Cost"
      helptext="Specify the standard cost of the item, with a value of 0 meaning it is free.">
      <it_field field="grCost"/>
      </inputthing>
    <inputthing
      name="Weight"
      helptext="Specify the weight of the item in pounds.">
      <it_field field="gearWeight"/>
      </inputthing>
    <inputthing
      name="Ultra Tech?"
      helptext="Specify whether this is considered Ultra Tech from the Sci-Fi Companion.">
      <it_tagcheck group="Equipment" tag="UltraTech"/>
      </inputthing>
    <inputthing
      name="Treat as Standard Gear"
      helptext="Specify whether this item is designated as 'standard gear' that can be readily omitted from use with selected Savage Settings.">
      <it_tagcheck group="Equipment" tag="Standard"/>
      </inputthing>
    </editthing>
  
